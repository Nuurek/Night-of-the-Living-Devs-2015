<Page x:ConnectionId='1'
    x:Class="Rko.RKOOgolnie"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rko"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:Rko.Controls"
    mc:Ignorable="d"                     >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer>
            <StackPanel x:ConnectionId='3' x:Name="InfoPanel" Margin="10,30,10,0">
                <TextBlock TextWrapping="Wrap" Text="Zasady resustytacji" FontSize="33" Margin="10,0,0,20" Foreground="#FF9216AE" TextAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Justify" Text="Uklęknij obok poszkodowanego, ułóż nadgarstek jednej ręki na środku klatki piersiowej poszkodowanego, ułóż nadgarstek drugiej ręki na już położonym. Po każdym uciśnięciu zwolnij nacisk na klatkę piersiową, nie odrywając dłoni od mostka. Powtarzaj uciśnięcia z częstotliwością 100/min (nieco mniej niż 2 uciśnięcia/s), okres uciskania i zwalniania nacisku (relaksacji) mostka powinien być taki sam."/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Justify" Text="Po wykonaniu 30 uciśnięć klatki piersiowej udrożnij drogi oddechowe i przejdź do oddechów ratowniczych. Wdmuchuj powoli powietrze do ust poszkodowanego przez około 1 sekundę (tak jak przy normalnym oddychaniu), obserwując jednocześnie czy klatka piersiowa się unosi taki oddech ratowniczy jest efektywny."/>
            </StackPanel>
        </ScrollViewer>
        <Controls:PageController x:ConnectionId='2' x:Name="Navigator" Margin="0" VerticalAlignment="Top" Grid.Row="1"/>
    </Grid>
</Page>

