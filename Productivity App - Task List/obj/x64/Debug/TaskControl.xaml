<UserControl
    x:Class="ProdApp.TaskControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProdApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="42"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="42"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:ConnectionId='1' x:Name="IsDoneBox" Content="" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:ConnectionId='2' x:Name="ContentBox" Grid.Column="1" Margin="5" TextWrapping="Wrap" Text="" BorderBrush="{x:Null}" Background="#FFC7C7C7"                                     />
        <AppBarButton x:ConnectionId='3' x:Name="DeleteButton" Grid.Column="2" HorizontalAlignment="Left" Icon="Clear" Margin="-12,-4,0,0" Label="" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" Foreground="Red"/>

    </Grid>
</UserControl>

